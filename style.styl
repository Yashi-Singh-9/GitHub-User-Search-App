@import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap')

* 
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'Space Mono', monospace
    background-color #F6F8FF

[data-theme="light"]
  body
    background-color #141D2F

  .container
    header
      h1
        color #ffffff
      #theme-switcher
        color #ffffff

    main
      .search-info
        background-color #1E2A47
        box-shadow none

        input
          background-color #1E2A47
          color #ffffff

          &::placeholder
            color #ffffff

        button
          background-color #0079FF
          color #ffffff

          &:hover
            background-color lighten(#0079FF, 10%)

      .github-info
        background-color #1E2A47

        .user-image
          border 2px solid #ffffff

        .user-info
          .user-top
            h2
              color #ffffff
            .joined
              color #ffffff

          .username
            color #0079FF

          .user-bio
            color #ffffff

          .user-stats
            background-color #141D2F

            li
              .user-stat-title
                color #ffffff
              .user-stat-value
                color #ffffff

          .user-links
            .user-link-container
              a,
              a:visited
                color #ffffff !important

.container
    max-width 750px
    width 95%
    margin 6rem auto    

    header
        display flex
        justify-content space-between
        align-items center
        margin-bottom 1.5rem

        h1
            color #2B3442   

        #theme-switcher
            padding 0.4rem
            border none
            background-color transparent
            display flex
            justify-content center
            align-items center
            gap 1rem
            font-family inherit
            letter-spacing 2px
            font-size 1rem
            text-transform uppercase
            cursor pointer
            color darken(#697C9A, 25%)
            font-weight 700
    
    main 
        .search-info
            padding 1rem
            background-color #FEFEFE 
            border-radius 1rem
            display flex
            align-items center
            box-shadow 0 8px 8px darken(#F6F8FF, 8%)
            margin-bottom 2rem

            .icon
                margin auto 1rem
            
                @media(max-width: 430px)
                    display none

            .input-info
                display flex
                width 100%

                @media(max-width: 430px)
                    flex-direction column

                input 
                    padding 1rem
                    border none
                    outline none
                    cursor pointer
                    font-family inherit
                    color #2B3442   
                    font-size 1.125rem
                    width 100%

                    &::placeholder
                        color #4B6A9B

                button 
                    cursor pointer
                    padding 13px 24px
                    border-radius 10px
                    border none
                    background-color #0079FF
                    font-weight bold 
                    font-family inherit
                    font-size 1.125rem
                    color #fff
                    transition 0.2s ease

                    &:hover 
                        background-color lighten(#0079FF, 10%)

        .github-info
            padding 1.8rem
            border-radius 1rem 
            box-shadow 0 8px 8px darken(#F6F8FF, 8%)
            display flex
            align-items flex-start
            background-color #FEFEFE 
            gap 2rem
            flex-wrap wrap

            .user-image 
                border-radius 50%
                height 117px
                width 117px

            .user-info 
                flex-grow 1

                .user-top
                    display flex
                    justify-content space-between
                    align-items center
                    flex-wrap wrap 
                    gap 0.5rem

                    h2 
                        color #2B3442 
                        font-size 2.2rem

                    .joined
                        color #697C9A
                        font-size 1rem    

                .username 
                    color #0079FF    
                    display block 
                    margin-bottom 2rem

                .user-bio 
                    color #4b6a9b
                    margin 20px 0 32px 0

                .user-stats 
                    display flex                
                    justify-content space-between
                    align-items flex-start
                    background-color #f6f8ff
                    padding 16px 32px
                    border-radius 10px
                    margin-bottom 36px
                    list-style none
                    flex-wrap wrap
                    gap 2rem

                    li 
                        .user-stat-title
                            color #4b6a9b
                            font-weight 400

                        .user-stat-value 
                            color #2b3442

                .user-links 
                    display grid                
                    justify-content space-between
                    align-items flex-start
                    grid-template-columns repeat(2, auto)
                    grid-template-rows repeat(2, auto)
                    column-gap 18px
                    row-gap 18px

                    @media(max-width: 430px)
                        grid-template-columns 1fr
                
                    .user-link-container
                        display flex
                        flex-wrap wrap
                        gap 1rem
                        align-items center

                        img
                            height 20px
                            width 20px
                            object-fit contain

                        a,
                        a:visited
                            color #2b3442 !important    